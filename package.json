{
  "name": "ai-sprite-image-generator",
  "version": "1.0.5",
  "description": "A TypeScript library and CLI tool to generate high-quality sprite images using Nano Banana Pro via kie.ai",
  "keywords": [
    "ai",
    "assets",
    "creator",
    "game development",
    "gemini",
    "gen-ai",
    "generator",
    "grid",
    "image",
    "kie ai",
    "logo",
    "nano banana pro",
    "photo",
    "sprite",
    "sprite sheet",
    "thumbnail",
    "web development"
  ],
  "homepage": "https://github.com/tayles/ai-sprite-image-generator",
  "bugs": {
    "url": "https://github.com/tayles/ai-sprite-image-generator/issues"
  },
  "license": "MIT",
  "author": "tayles",
  "repository": {
    "type": "git",
    "url": "https://github.com/tayles/ai-sprite-image-generator.git"
  },
  "bin": {
    "ai-sprite-image-generator": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "release": "bumpp --commit --push --tag",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --coverage --coverage-reporter=lcov",
    "test:watch": "bun test --watch",
    "test:examples": "bun test --timeout 300000 ./test/integration-test.ts",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "bun run lint --fix",
    "fmt": "oxfmt --check",
    "fmt:fix": "oxfmt",
    "check": "bun run fmt && bun run lint",
    "check:ci": "bun run fmt && bun run lint --format=github",
    "clean": "bun run fmt:fix && bun run lint:fix"
  },
  "dependencies": {
    "@types/sharp": "^0.32.0",
    "picocolors": "^1.1.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "bumpp": "^10.4.1",
    "bunup": "^0.16.25",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
